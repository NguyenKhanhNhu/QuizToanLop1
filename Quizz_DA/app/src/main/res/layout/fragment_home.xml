<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- View làm nền trên cùng -->
    <View
        android:id="@+id/viewHeader"
        android:layout_width="0dp"
        android:layout_height="127dp"
        android:background="@drawable/bg1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView chứa các nút -->

    <ScrollView
        android:id="@+id/scrollHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHeader"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <Button
                android:id="@+id/btnSoDen10"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="28dp"
                android:backgroundTint="#FFCCC2"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Các số đến 10"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/btnCong10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgLyNuoc"
                android:layout_width="137dp"
                android:layout_height="155dp"
                android:layout_marginBottom="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic3"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnSoDen10"
                app:layout_constraintEnd_toEndOf="@+id/btnSoDen10"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnSoDen10" />

            <Button
                android:id="@+id/btnCong10"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="28dp"
                android:backgroundTint="#B2E3E6"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Phép cộng 10"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnSoDen10"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgSua"
                android:layout_width="137dp"
                android:layout_height="155dp"
                android:layout_marginBottom="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic4"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnCong10"
                app:layout_constraintEnd_toEndOf="@+id/btnCong10"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnCong10" />

            <Button
                android:id="@+id/btnTru10"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="38dp"
                android:backgroundTint="#BA978B"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Phép trừ 10"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/btnSoDen100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnSoDen10" />

            <ImageView
                android:id="@+id/imgSua2"
                android:layout_width="137dp"
                android:layout_height="155dp"
                android:layout_marginBottom="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic5"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnTru10"
                app:layout_constraintEnd_toEndOf="@+id/btnTru10"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnTru10" />

            <Button
                android:id="@+id/btnSoDen100"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="38dp"
                android:backgroundTint="#BCEFBF"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Các số đến 100"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnTru10"
                app:layout_constraintTop_toBottomOf="@id/btnCong10" />

            <ImageView
                android:id="@+id/imgLyNuoc2"
                android:layout_width="137dp"
                android:layout_height="155dp"
                android:layout_marginBottom="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic6"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnSoDen100"
                app:layout_constraintEnd_toEndOf="@+id/btnSoDen100"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnSoDen100" />

            <Button
                android:id="@+id/btnCong100"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="38dp"
                android:backgroundTint="#F8DCB4"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Phép cộng 100"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/btnTru100"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnTru10" />

            <ImageView
                android:id="@+id/imgLyNuoc3"
                android:layout_width="137dp"
                android:layout_height="155dp"
                android:layout_marginBottom="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic7"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnCong100"
                app:layout_constraintEnd_toEndOf="@+id/btnCong100"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnCong100" />

            <Button
                android:id="@+id/btnTru100"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="38dp"
                android:backgroundTint="#FFD8E6"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Phép trừ 100"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnCong100"
                app:layout_constraintTop_toBottomOf="@id/btnSoDen100" />

            <ImageView
                android:id="@+id/Sua3"
                android:layout_width="137dp"
                android:layout_height="155dp"
                android:layout_marginBottom="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic8"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnTru100"
                app:layout_constraintEnd_toEndOf="@+id/btnTru100"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnTru100" />

            <Button
                android:id="@+id/btnOnTapHK1"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="38dp"
                android:backgroundTint="#F4E3B1"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Ôn tập HK1"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/btnOnTapHK2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnCong100" />

            <ImageView
                android:id="@+id/icThihk"
                android:layout_width="247dp"
                android:layout_height="285dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic9"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnOnTapHK1"
                app:layout_constraintEnd_toEndOf="@+id/btnOnTapHK1"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnOnTapHK1" />

            <Button
                android:id="@+id/btnOnTapHK2"
                android:layout_width="152dp"
                android:layout_height="158dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="38dp"
                android:backgroundTint="#E0D1CB"
                android:fontFamily="@font/quicksand_bold"
                android:paddingTop="70dp"
                android:text="Ôn tập HK2"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnOnTapHK1"
                app:layout_constraintTop_toBottomOf="@id/btnTru100" />

            <ImageView
                android:id="@+id/icThihk2"
                android:layout_width="257dp"
                android:layout_height="295dp"
                android:layout_marginBottom="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic10"
                android:translationY="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/btnOnTapHK2"
                app:layout_constraintEnd_toEndOf="@+id/btnOnTapHK2"
                app:layout_constraintHorizontal_bias="0.533"
                app:layout_constraintStart_toStartOf="@+id/btnOnTapHK2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Toán lớp 1"
        android:textColor="#8370A8"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/viewHeader"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="@+id/viewHeader"
        app:layout_constraintTop_toTopOf="@+id/viewHeader" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/quicksand_semibold"
        android:text="Cùng khám phá những câu hỏi toán vui nhộn và bổ ích."
        android:textColor="#8370A8"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/viewHeader"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="@+id/viewHeader"
        app:layout_constraintTop_toBottomOf="@+id/tv1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/quicksand_semibold"
        android:text="Bé chọn chủ đề yêu thích để học và luyện tập nhé!"
        android:textColor="#8370A8"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="@+id/viewHeader"
        app:layout_constraintTop_toBottomOf="@+id/tv2" />

</androidx.constraintlayout.widget.ConstraintLayout>
